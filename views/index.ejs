  </head>
  <span id="hog"class="font-semibold">Hogwarts</span>
  <body>
    
    <div class="box" action="index.ejs" method="POST">
      <h1 id="fadein"class=" text-center font-semibold text x-large">Hello My Name is Tom Riddle</h1><br>
      
      <a href="/login"id="hog">Login</a><br>
      <a href="/signup"id="hog">Sign Up</a>
    </div>
    
    <div id="tom's-entries">
      <div>
          <img  src="https://riddleimages.s3.amazonaws.com/Tom_Diary.png" style="width:900px;height:300px;" class="center">
          <br/>
          <form action="/html/tags/html_form_tag_action.cfm" method="post">
            Tom's Entries:<br />
            <textarea name="tom's-entry" id="tom's-entry">
            </textarea><br />
            <input onclick="editDiary()" type="submit" value="Add Entry" />
          </form>
      </div>
    </div>
    <script>
      function editDiary() {
        const diaryInput = document.getElementById("tom's-entry").value;
        const div = document.createElement('div');
        div.className = 'new-entry';
        const para = document.createElement("p");
        const node = document.createTextNode(diaryInput);
        div.appendChild(para);
        para.appendChild(node);

        const element = document.getElementById("tom's-entries");
        element.appendChild(div);
      }
    </script>
  </body>